<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.various_hackers.textscrambler.MainActivity"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/text_scrambler_bg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:scaleType="fitXY" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <TextView
            android:text="@string/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:text="Original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:text="test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:fontFamily="sans-serif"
                    android:textSize="22sp"
                    android:textStyle="normal|italic"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/reverse_icon"
                    android:id="@+id/imageButton"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:text="Encrypted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:text="sdrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="normal|italic"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-10dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="425dp"
                app:srcCompat="@drawable/input_bg"
                android:id="@+id/input_bg"
                android:cropToPadding="true"
                android:scaleType="fitXY" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorText"
                android:text="@string/substitution_string"
                android:layout_alignTop="@+id/input_bg" />

            <TextView
                android:text="@string/substitution_string"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/textView7"
                android:textColor="@color/colorText"
                android:textSize="17sp"
                android:layout_alignTop="@+id/input_bg"
                android:layout_marginTop="240dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <Button
            android:text="Translate"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/button"
            android:textColor="@color/colorText"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="normal|bold"
            android:background="@android:color/white" />

    </LinearLayout>
</RelativeLayout>
